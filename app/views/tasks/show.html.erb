<h1> <%= @task.title %> <h1>
<p> <%= @task.details %> </p>
<p> <%= @task.completed ? "Completed" : "Incompleted" %> </p>

<div> <%= link_to "Back to list", tasks_path %> </div>
<div> <%= link_to "Edit this task", edit_task_path %> </div>
<div> <%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %> </div>